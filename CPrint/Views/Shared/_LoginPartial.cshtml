@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
<ul class="list-inline">
    <li class="nav-item ">
        <!-- the telephone and font size can be chagned to suit-->
        <a href="tel:01506854033"><span style="font-size: 22px; color: white;">
                                      <i class="fas fa-phone">01506 854033</i>
</span> </a>
    </li>
    <li class="nav-item">
        <a class="text-white font-weight-bold" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    |
    <li class="nav-item">
        <a class="text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
</ul>
}
</ul>
